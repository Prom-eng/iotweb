mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light(style={background:'#e5e5e5'})
    img(src="https://www.flaticon.com/svg/vstatic/svg/188/188333.svg?token=exp=1618687148~hmac=60704d47f18dbe51c83c308ff9b34a39" style={height:'36px'})
    a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          a(style="font-size:20px;").nav-link(href="/") Home
        if user
          li.nav-item
            a(style="font-size:20px;").nav-link(href="/dashboard") Dashboard
    .navbar-right
      if user
        span(style="font-size:20px;").navbar-text Hello #{user.email}!
    .navbar-right
      if user
        ul.navbar-nav.mr-auto
          li.nav-item
            a(style="font-size:20px;").nav-link(href="/logout") Logout
      else
        ul.navbar-nav.mr-auto
          li.nav-item
            a(style="font-size:20px;").nav-link(href="/login") Login
          li.nav-item
            a(style="font-size:20px;").nav-link(href="/signup") Sign up